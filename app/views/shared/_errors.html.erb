  <div class='alert alert-error'>
    <%= obj.errors.full_messages.join(',') %>
  </div>
<% end %>

<% if obj.errors.any? %>
    <div class="row">
      <div class='alert alert-error span8'>
        <h5>please fix the following errors:</h5>
